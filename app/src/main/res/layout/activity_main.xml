<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/calculatorBackground">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:textColor="@color/WHITE"
        android:fontFamily="@font/digital_7"
        android:textSize="70sp"
        android:gravity="end"
        android:padding="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/result"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                style="@style/NumberButtonStyle"
                android:background="#FFEA00"
                android:text="C"
                android:id="@+id/cBT"/>

            <Button
                style="@style/NumberButtonStyle"
                android:text="%"
                android:id="@+id/parcentBT"/>

            <Button
                style="@style/NumberButtonStyle"
                android:text="âˆš"
                android:id="@+id/rootBT"/>

            <Button
                style="@style/NumberButtonStyle"
                android:text="DEL"
                android:id="@+id/delBT"
                android:background="#FF0000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                style="@style/NumberButtonStyle"
                android:text="7"
                android:id="@+id/sevenBT"/>

            <Button
                style="@style/NumberButtonStyle"
                android:text="8"
                android:id="@+id/eightBT"/>

            <Button
                style="@style/NumberButtonStyle"
                android:text="9"
                android:id="@+id/nineBT"/>

            <Button
                style="@style/NumberButtonStyle"
                android:text="/"
                android:id="@+id/divisionBT"
                android:background="@color/RED400"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                style="@style/NumberButtonStyle"
                android:text="4"
                android:id="@+id/fourBT"/>

            <Button
                style="@style/NumberButtonStyle"
                android:text="5"
                android:id="@+id/fiveBT"/>

            <Button
                style="@style/NumberButtonStyle"
                android:text="6"
                android:id="@+id/sixBT"/>

            <Button
                style="@style/NumberButtonStyle"
                android:text="*"
                android:id="@+id/multiplyBT"
                android:background="@color/RED400"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                style="@style/NumberButtonStyle"
                android:text="1"
                android:id="@+id/oneBT"/>

            <Button
                style="@style/NumberButtonStyle"
                android:text="2"
                android:id="@+id/twoBT"/>

            <Button
                style="@style/NumberButtonStyle"
                android:text="3"
                android:id="@+id/threeBT"/>

            <Button
                style="@style/NumberButtonStyle"
                android:text="-"
                android:id="@+id/subtractionBT"
                android:background="@color/RED400"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                style="@style/NumberButtonStyle"
                android:text="0"
                android:id="@+id/zeroBT"/>

            <Button
                style="@style/NumberButtonStyle"
                android:text="."
                android:id="@+id/pointBT"/>

            <Button
                android:background="#006600"
                style="@style/NumberButtonStyle"
                android:text="="
                android:id="@+id/equalBT"/>

            <Button
                style="@style/NumberButtonStyle"
                android:text="+"
                android:id="@+id/plusBT"
                android:background="@color/RED400"/>

        </LinearLayout>

        


    </LinearLayout>





</RelativeLayout>